{
  "name": "kiosk-video-app",
  "version": "1.0.0",
  "description": "Kiosk Video Player App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.kamalkishor.kiosk",
    "productName": "E-Learning",
    "icon": "assets/images/appIcon.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/.cache/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/videos",
        "to": "assets/videos",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "E-Learning",
      "uninstallDisplayName": "E-Learning"
    }
  }
}